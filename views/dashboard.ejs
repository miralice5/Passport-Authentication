<%- include("./partials/header")%>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="header-text text-center">
                <h1>Dashboard</h1>
                <a href="/logout" class="btn btn-danger">Logout</a>
            </div>
            <div class="col-md-6 offset-md-3">
                <div class="user-info-wrapper mt-4">
                    <table class="table table-dark table-bordered center">
                        <tr class="text-center">
                            <th>Username</th>
                            <th>Email</th>
                            <th>Delete An user</th>
                        </tr>
                        <% users.forEach(user => { %>
                        <tr class="text-center">
                            <td><%= user.username%></td>
                            <td><%= user.email%></td>
                            <td>

                                <!-- Button trigger modal -->
                            
                                <a data-toggle = "modal" href="#deleteModal<%=user._id%>" class="btn btn-danger btn-sm">Delete</a>




                            </td>
                            <!-- modal delete  -->



<!-- Modal -->
<div class="modal fade" id="deleteModal<%=user._id%>" tabindex="-1" role="dialog" aria-labelledby="deleteModal"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Delete User Confirmation!</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <a type="button" href="/delete/<%=user._id%>"class="btn btn-danger" >Delete</a>
            </div>
        </div>
    </div>
</div>
                        </tr>
                        <% }); %>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<%- include("./partials/footer")%>